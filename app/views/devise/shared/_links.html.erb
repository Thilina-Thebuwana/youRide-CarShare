<div id = "outer">
<%- if controller_name != 'sessions' %>
  <%= button_to "Log in", new_session_path(resource_name), :class => 'btn btn-danger' %><br />
<% end -%>
</div>


<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), :class => 'btn btn-default' %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), :class => 'btn btn-default' %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) , :class => 'btn btn-default' %><br />
<% end -%>

<div id = "outer">
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div id = "inner"><%= link_to " Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider ), :class => 'btn btn-primary' %></div>
  <% end -%>
<% end -%>
</div>